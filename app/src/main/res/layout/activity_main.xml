<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/img"
   >

    <LinearLayout
        android:id="@+id/li"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/li">

    <ImageView
       android:id="@+id/img"
       android:layout_width="70dp"
       android:layout_height="70dp"
       android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/txt"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="OnBlick"
            android:textColor="@color/white"
            android:textSize="25dp"
            />

    </LinearLayout>
<LinearLayout
    android:id="@+id/li1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@id/li"
    app:layout_constraintStart_toStartOf="parent"
    android:background="@drawable/border"
    android:backgroundTint="#FDFDFD"
    android:layout_margin="40dp"
    android:padding="10dp">


    <Spinner
        android:id="@+id/spin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:padding="10dp"
        android:layout_margin="15dp"/>

    <EditText
        android:id="@+id/edtxt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First name"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/edtxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last name"
        android:layout_margin="10dp"
        />


    <EditText
        android:id="@+id/edtxt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Work email"
        android:layout_margin="10dp"
        />

    <EditText
        android:id="@+id/edtxt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Organization name"
        android:layout_margin="10dp"
        />
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    >

    <Spinner
        android:id="@+id/spin2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:padding="6dp"
        android:entries="@array/spinner2"
        android:layout_margin="10dp" />
    <EditText
        android:id="@+id/edtxt5"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Organization name"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        />

</LinearLayout>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agree to the terms and condition"
        android:layout_marginStart="15dp"
        android:textSize="15dp"/>


</LinearLayout>

    <LinearLayout
        android:id="@+id/li2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/li1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="90dp"
            android:textSize="18dp"
            android:padding="2dp"
            android:textColor="@color/black"
            android:text="have an acount?"/>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="SIGN IN"
            android:textColor="#2F81DD"
            android:textSize="18dp"/>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>